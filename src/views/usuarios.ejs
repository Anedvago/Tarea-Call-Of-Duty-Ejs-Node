<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/pages.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col text-center text-light mt-3">
          <h1>Usuarios</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <div class="card bg-dark text-light" style="height: 85vh">
            <div class="card-body" style="overflow: auto">
              <table class="table table-dark">
                <thead>
                  <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contraseña</th>
                    <th scope="col">Actualizar</th>
                    <th scope="col">Eliminar</th>
                  </tr>
                </thead>
                <tbody>
                  <% usuarios.forEach((usuario,index) => { %>
                  <tr>
                    <td><%=usuario.Nombre%></td>
                    <td><%=usuario.Email%></td>
                    <td><%=usuario.Contraseña%></td>
                    <td>
                      <form
                        action="/usuarios/actualizar/<%=index%>"
                        method="GET"
                      >
                        <button class="btn btn-warning">Actualizar</button>
                      </form>
                    </td>
                    <td>
                      <form
                        action="/usuarios/borrar/<%= usuario._id %>"
                        method="POST"
                      >
                        <button class="btn btn-danger">Eliminar</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card bg-dark text-light" style="height: 85vh">
            <div
              class="card-body d-flex align-items-center justify-content-center"
              style="overflow: auto"
            >
              <form
                class="d-flex align-items-center justify-content-center flex-column"
                action="/usuarios/crear"
                method="POST"
                autocomplete="off"
              >
                <div class="mb-3">
                  <label for="name" class="form-label">Nombre</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                  />
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                  />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Contraseña</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    autocomplete="new-password"
                  />
                </div>

                <button type="submit" class="btn btn-primary">
                  Crear nuevo
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <a class="btn btn-secondary flotante" href="/">Volver al menú</a>
    </div>

    <!-- scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
